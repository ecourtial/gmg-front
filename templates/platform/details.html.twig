{% extends 'base.html.twig' %}
{% block body %}
    {% if is_granted('ROLE_USER') %}
        <form action="{{ url('delete_platform', {id: platform['id']}) }}" method="post" data-confirmation="true" id="delete-form">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete_platform') }}" />
            <button type="submit" id="deletePostSubmitButton" class="btn btn-lg btn-block btn-danger" onclick="return areYouSure('{{ 'delete_entry_confirmation'|trans }}');">
                <i class="fa fa-trash" aria-hidden="true"></i>
                {{ 'delete_action'|trans }}
            </button>
        </form>
        <br/>
        <a href="{{ url('edit_platform', {'id': platform['id']}) }}">
            <button type="submit" class="btn btn-lg btn-block btn-outline-info">
                <i class="fa fa-trash" aria-hidden="true"></i>
                {{ 'menu.edit'|trans }}
            </button>
        </a>
        <a href="{{ url('add_version') }}?platform={{ platform['id'] }}">
            <button type="submit" class="btn btn-lg btn-block btn-success">
                <i class="fa fa-trash" aria-hidden="true"></i>
                {{ 'menu.add_version_on_platform'|trans }}
            </button>
        </a>
    {% endif %}
    <hr>
    {% include 'version/list-content.html.twig' %}
{% endblock %}
