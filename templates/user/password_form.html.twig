{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                <form action="{{ path('change_password') }}" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <label for="current_password">{{ 'user.label.form.current_password'|trans }}</label>
                            <input type="password" id="current_password" name="_current_password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="new_password">{{ 'user.label.form.new_password'|trans }}</label>
                            <input type="password" id="new_password" name="_new_password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="new_password_confirm">{{ 'user.label.form.new_password_confirm'|trans }}</label>
                            <input type="password" id="new_password_confirm" name="_new_password_confirm" class="form-control" />
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('change_password') }}"/>
                        <button type="submit" id="loginSubmitButton" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'see.update'|trans }}
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
