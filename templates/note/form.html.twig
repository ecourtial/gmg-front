{% extends 'base.html.twig' %}
{% block body %}
    <form method="POST" action="">
        <fieldset>
            <div class="form-group">
                <label for="title">{{ 'note_title'|trans }}</label>
                <input type="text" id="title" name="title" value="{{ note['title']|default('') }}" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="content">{{ 'note_content'|trans }}</label>
                <textarea id="content" name="content" class="form-control">{{ note['content']|default('') }}</textarea>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('add_note') }}" />
            <button type="submit" id="loginSubmitButton" class="btn btn-primary">
                <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'menu.save'|trans }}
            </button>
        </fieldset>
    </form>
{% endblock %}
